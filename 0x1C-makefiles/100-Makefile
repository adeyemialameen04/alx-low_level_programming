CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

# Rules
all: $(NAME)

$(NAME): $(OBJ)
   $(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
   $(RM) *~ $(NAME)

oclean:
   $(RM) $(OBJ)

fclean: clean oclean

re: fclean all

${OBJ}: %.o: %.c m.h 
	gcc ${CFLAGS} -c $< -o $@

.PHONY: all clean oclean fclean re
