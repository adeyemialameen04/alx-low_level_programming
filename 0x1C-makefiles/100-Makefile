CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

# Rules
all: $(NAME)

$(NAME): $(OBJ)
   $(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
   $(RM) $(wildcard *~) $(wildcard *.swp) $(NAME)

fclean: clean
   $(RM) $(OBJ)

oclean:
   $(RM) $(OBJ)

re: fclean all

# Check for m.h
ifeq ($(wildcard m.h),)
$(error Header file m.h is missing)
endif
